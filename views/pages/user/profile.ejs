  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include ('../../partials/header.ejs') %>
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Profile</title>
</head>

<body>
  <%- include ('../../partials/navbar.ejs') %>
  <div class="container">

    <h1 class="mt-5 mb-3">Profile</h1>
