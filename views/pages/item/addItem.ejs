<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include ('../../partials/header.ejs') %>
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Add Item</title>
</head>

<body>
    <%- include ('../../partials/navbar.ejs') %>
    <div class="container mb-5">
        <h2 class='my-4'>Add Item</h2>
        <hr class="my-4">

        <form method="POST" action="/item/process">
            <div class="form-row mb-2">
                <div class="col">
                    <label for="item_url">Item Link</label>
                    <input type="url" name="item_url" class="form-control" id="item_url" aria-describedby="linkHelp"
                        required>
                </div>
                <div class="col">
                    <label for="list">Wishlist</label>
                    <select id="list" class="custom-select" name="list" required>
                        <option disabled selected value="">Choose...</option>
                        <% lists.forEach((list) => { %>
                        <option value="<%= list._id %>"><%= list.name %></option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div> <!-- END CONTAINER -->
    <%- include ('../../partials/endBody.ejs') %>
</body>

</html>