<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include ('../partials/header.ejs') %>
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/ui-lightness/jquery-ui.css"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/search.css">
    <title>Search</title>
</head>

<body>
    <%- include ('../partials/navbar.ejs') %>
    <div class="container mb-5">
        <h2 class='my-4'>Search</h2>
        <hr class="my-4">
        <form method="GET" action="">
            <div class="row input-group mb-3">
                <div class="input-group-prepend">
                    <select class="form-control" name="category">
                        <option>All</option>
                        <option>Clothes</option>
                        <option>Headphones</option>
                        <option>Laptops</option>
                        <option>Shoes</option>
                        <option>Video Games</option>
                    </select>
                </div>
                <input type="text" name="keyword" class="form-control" placeholder="See if the gift is listed already!"
                    aria-label="Recipient's username" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="button" id="button-addon2"><i
                            class="fas fa-search"></i></button>
                </div>
            </div>
            <div class="row mb-2 align-bottom">
                <div class="py-2">Price: $</div>
                <input type="number" min="0" class="form-control range-price" name="min-price" id="min-price">
                <div class="py-2">&nbsp - $</div>
                <input type="number" max="500" class="form-control range-price" name="max-price" id="max-price">
            </div>
            <div class="row justify-content-between">
                <div class="mt-4 col-md-3" id="slider-range"></div>
                <select class="mt-1 form-control col-md-3" name="category">
                    <option value="popular">Popular</option>
                    <option value="price-low">Price: Low to High</option>
                    <option value="price-high">Price: High to Low</option>
                    <option value="name-a">Name: A to Z</option>
                    <option value="name-z">Name: Z to A</option>
                </select>

            </div>
        </form>
        <hr class="my-4">

        <div class="card-deck row row-cols-lg-4 row-cols-md-2">
            <div class="col mb-5">
                <div class="card h-100 pt-3 shadow">
                    <img src="https://images-na.ssl-images-amazon.com/images/I/71zU29X1JiL._AC_UY741_.jpg"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><a href="#">Champion Mens Heavyweight Jersey with Hood Hoodies</a></h5>
                        <p class="card-text">$39.83</p>
                    </div>
                </div>
            </div>

            <div class="col mb-5">
                <div class="card h-100 pt-3 shadow">
                    <img src="https://store.storeimages.cdn-apple.com/4982/as-images.apple.com/is/MWP22?wid=572&hei=572&fmt=jpeg&qlt=95&op_usm=0.5,0.5&.v=1572990352299"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><a href="#">AirPods Pro</a></h5>
                        <p class="card-text">$329.00</p>
                    </div>
                </div>
            </div>

            <div class="col mb-5">
                <div class="card h-100 pt-3 shadow">
                    <img src="https://images-na.ssl-images-amazon.com/images/I/61VO-9GI8nL._AC_SL1010_.jpg"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><a href="#">Nike Tech Swoosh Cap, One Size</a></h5>
                        <p class="card-text">$43.09</p>
                    </div>
                </div>
            </div>

            <div class="col mb-5">
                <div class="card h-100 pt-3 shadow">
                    <img src="https://images-na.ssl-images-amazon.com/images/I/81Ja08WuPUL._AC_SL1500_.jpg"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><a href="#">Mr. Coffee Mug Warmer</a></h5>
                        <p class="card-text">$24.60</p>
                    </div>
                </div>
            </div>
            <div class="col mb-5">
                <div class="card h-100 pt-3 shadow">
                    <img src="https://images-na.ssl-images-amazon.com/images/I/81UfEdvf2kL._AC_SL1500_.jpg"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><a href="#">Animal Crossing: New Horizons
                            </a></h5>
                        <p class="card-text">$79.99</p>
                    </div>
                </div>
            </div>

            <div class="col mb-5">
                <div class="card h-100 pt-3 shadow">
                    <img src="https://images-na.ssl-images-amazon.com/images/I/51f3CPTqkfL._SX328_BO1,204,203,200_.jpg"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><a href="#">Untamed
                            </a></h5>
                        <p class="card-text">$25.25</p>
                    </div>
                </div>
            </div>

        </div> <!-- END CARD DECK -->
    </div> <!-- END CONTAINER -->
    <%- include ('../partials/endBody.ejs') %>
    <script src="/js/slider.js"></script>
</body>

</html>